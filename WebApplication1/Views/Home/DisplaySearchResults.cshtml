@model IEnumerable<WebApplication1.ViewModels.CareerProfile>

@{
    ViewBag.Title = "DisplaySearchResults";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}

<h2>DisplaySearchResults</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<div class="resultsContainer">
    @foreach (var item in Model)
    {

        <div class="indResultsContainer">
            <div class="resultPic">
                <img src="@Html.DisplayFor(modelItem => item.PictureURL)" width="100" height="110">
            </div>
            <div class="resultCopy">
                <b>@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</b> | @Html.DisplayFor(modelItem => item.City), @Html.DisplayFor(modelItem => item.Country)<br />
                Work Experience: @Html.DisplayFor(modelItem => item.CompanyTitleYears)<br />
                Industries: @Html.DisplayFor(modelItem => item.Industry)<br />
                Skills: @Html.DisplayFor(modelItem => item.Skills)
            </div>
            <div class="resultLinks">
                @Html.ActionLink("View Profile", "IndividualProfile", new { profileID = item.ProfileID }) | <a href="@Html.DisplayFor(modelItem => item.PortfolioURL)"> Portfolio link</a> | <a href="@Html.DisplayFor(modelItem => item.LinkedinURL)"> LinkedIn link</a><br />
            </div>
            <div class="clearfix"></div>
        </div>
    }
    <div class="clearfix"></div>

</div>
