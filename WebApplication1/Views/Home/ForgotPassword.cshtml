
@{
    ViewBag.Title = "ForgotPassword";
    Layout = "~/Views/Shared/LayoutMain.cshtml";
}

<style>
    .verticalSpace {
        padding-top: 50px;
        min-height: 308px;
    }
</style>

<!-- *****************************************************************************************************************
BLUE WRAP
***************************************************************************************************************** -->
<div id="blue">
    <div class="container">
        <div class="row">
            <h3>Verify Your EmployeeArray ID</h3>
        </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /blue -->

<div class="container verticalSpace">
    <form method="post" action="/Home/ForgotPassword" data-toggle="validator" role="form">
        @Html.AntiForgeryToken()
        <div class="form-group form-horizontal">
            <div class="form-group">
                <div class="col-md-2"><label class="control-label" for="email">ID (Email)</label></div>
                <div class="col-md-5">
                    <input type="email" class="form-control" id="email" name="email" placeholder="Enter email" required>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </div>
    </form>
</div>
